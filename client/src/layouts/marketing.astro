---
import { Image } from "astro:assets";
import logo from "../images/squircle-logo-purple.png";
import Layout from "./base.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <header>
    <a href="/" rel="home">
      <Image src={logo} alt="Squircle logo" width="36" height="36" />
      Squircle
    </a>

    <nav>
      <a href="/dashboard">Dashboard</a>
    </nav>
  </header>

  <slot />

  <footer>
    <a href="https://github.com/stytchauth/stytch-b2b-saas-example"
      >source code</a
    >
    <a href="https://stytch.com/">Stytch auth</a>
  </footer>
</Layout>

<style is:global>
  body {
    /* for that Linear-like color glow */
    background-image: radial-gradient(
      ellipse at top center in oklch,
      color-mix(in oklch, var(--brand), transparent 60%),
      color-mix(in oklch, var(--brand), transparent 100%) 70%
    );
    background-position: top -5rem center;
    background-repeat: no-repeat;
    background-size: 90vw 15rem;
  }
</style>

<style>
  header {
    align-items: center;
    display: flex;
    justify-content: space-between;
    padding: 2rem max(5vw, (100vw - 1280px) / 2);
  }

  a[rel="home"] {
    align-items: center;
    color: var(--fg);
    display: flex;
    font-size: 1.25rem;
    font-weight: 700;
    line-height: 1;
    gap: 0.5rem;
    text-decoration: none;
  }

  nav {
    align-items: center;
    display: flex;
    gap: 0.5rem;

    & a {
      color: var(--nav);
      font-weight: 600;
      text-decoration: none;

      &:not(:has(img)) {
        padding: 0.5rem 1rem;
      }

      & img {
        border: 1px solid var(--border);
        border-radius: 50%;
        display: block;
      }
    }
  }

  footer {
    color: var(--color-gray);
    display: flex;
    gap: 1rem;
    justify-content: center;
    padding: 3rem max(5vw, (100vw - 1280px) / 2);

    & a {
      color: inherit;
      font-size: 0.75rem;
      text-decoration: none;

      &:is(:hover, :focus) {
        text-decoration: underline;
      }
    }
  }
</style>
