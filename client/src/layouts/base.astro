---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap"
			rel="stylesheet"
		/>

		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<title>{title}</title>

		<slot name="seo" />
	</head>

	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--color-black: oklch(14.89% 0.07780101379753611 317.04545376092335);
		--color-white: oklch(97.36% 0.012 319.82);
		--color-gray-light: oklch(93.08% 0.03 329.29);
		--color-gray: oklch(83.98% 0.047 329.43);
		--color-gray-medium: oklch(71.73% 0.03 329.34);
		--color-gray-dark: oklch(43.56% 0.015 319.77);
		--color-gray-darkest: oklch(28.02% 0.014 317.88);
		--color-purple: oklch(60.63% 0.322 311.42);
		--color-purple-dark: oklch(40.06% 0.211 312.64);
		--color-yellow: oklch(53.52% 0.113 94.14);
		--color-green: oklch(51.28% 0.179 142.08);
		--color-red: oklch(40.21% 0.161 24.26);

		/* shorthand colors */
		--brand: var(--color-purple);
		--bg: var(--color-black);
		--fg: var(--color-white);
		--text: var(--color-gray);
		--nav: var(--color-gray-light);
		--border: var(--color-gray-dark);

		/* gradients */
		--purple-gradient: linear-gradient(
			175deg in oklch,
			var(--color-purple),
			var(--color-purple-dark)
		);

		.screen-reader-only:not(:focus):not(:active) {
			clip: rect(0 0 0 0);
			clip-path: inset(50%);
			height: 1px;
			overflow: hidden;
			position: absolute;
			white-space: nowrap;
			width: 1px;
		}
	}

	* {
		box-sizing: border-box;
	}

	html {
		font-family: Inter, system-ui, sans-serif;
		font-size: 18px;
		line-height: 1.45;
	}

	body {
		background-color: var(--bg);
		color: var(--text);
		margin: 0;
	}

	:is(h1, h2, h3, h4) {
		color: var(--fg);
		line-height: 1.1;
	}

	:is(input, button, option) {
		font-family: Inter, system-ui, sans-serif;
	}

	a {
		color: var(--brand);
	}
</style>
